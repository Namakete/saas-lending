{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@source/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@component/*": ["src/components/*"],
      "@configuration/*": ["src/configurations/*"],
      "@entity/*": ["src/entities/*"],
      "@enum/*": ["src/enums/*"],
      "@feature/*": ["src/features/*"],
      "@hook/*": ["src/hooks/*"],
      "@page/*": ["src/pages/*"],
      "@shared/*": ["src/shared/*"],
      "@type/*": ["src/styles/types/*"],
      "@util/*": ["src/styles/utils/*"],
      "@style/*": ["src/styles/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
