{
  "files.exclude": {
    "**/node_modules": true,
    "**/.cache": true,
    "**/.next": true,
    "**/out": true,
    "**/dist": true
  },
  "files.eol": "\n",
  "files.autoSave": "onFocusChange",
  "search.exclude": {
    "**/node_modules": true,
    "**/.cache": true,
    "**/.next": true,
    "**/out": true,
    "**/dist": true
  },
  "prettier.printWidth": 80,
  "prettier.tabWidth": 2,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.bracketSpacing": true,
  "prettier.semi": false,
  "prettier.arrowParens": "always",
  "prettier.endOfLine": "lf",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ]
}
