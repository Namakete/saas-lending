datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model technologies {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  logo        String
  category    String
  rating      String
  date        String
  image       String
  content     String
  benefits    String[]
  link        Json
}

type Link {
  website       String
  documentation String
  twitter       String
  linkedin      String
}
